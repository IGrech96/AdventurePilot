{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist/renderer",
    "rootDir": "src/renderer",
    "paths": {
      "@/*": [
        "./src/renderer/tiptap/*"
      ]
    }
  },
  "include": [
    "./src/renderer",
    "src/renderer/appApi.d.ts",
    "./src/renderer/tiptap/components/tiptap-templates/simple/data/content.json",
    "./src/renderer/tiptap/components/tiptap-templates/simple/data/content2.json",
  ]
}