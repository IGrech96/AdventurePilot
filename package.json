{
  "name": "adventurepilot",
  "version": "1.0.0",
  "description": "Game master assistance. Help to drive offline Adventures",
  "main": "./dist/electron/app.js",
  "repository": "https://github.com/IGrech96/AdventurePilot.git",
  "author": "IvanG",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "transpile:electron": "tsc --project ./tsconfig.node.json",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac --arm64",
    "dist:linux": "electron-builder --linux --x64"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^10.0.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-dom": "^1.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "standard": "^17.1.2",
    "standard-loader": "^7.0.0",
    "ts-loader": "^9.5.2",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "webpack": "^5.101.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/x-tree-view": "^8.10.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^37.2.6",
    "global": "^4.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-split": "^2.0.14"
  }
}
