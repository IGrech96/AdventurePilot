{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yarn dev",
      "type": "shell",
      "command": "yarn dev",
      "options": {
        "cwd": "${workspaceFolder}/src/renderer"
      },
    },
    {
      "label": "yarn: compile",
      "type": "shell",
      "command": "yarn run build",
      "problemMatcher": [],
      "dependsOn": ["copy appApi.js"]
    },
    {
      "label": "copy appApi.js",
      "type": "shell",
      "command": "cp ${workspaceFolder}/src/electron/appApi.js ${workspaceFolder}/dist/electron",
      "problemMatcher": [],
    }
  ]
}